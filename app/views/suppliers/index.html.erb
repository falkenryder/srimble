<div class="container suppliers-body">
  <h1><strong> Choose a Supplier </strong></h1>
<br>
  <div>
    <% @suppliers.each do |supplier| %>
    <ul>
      <%= link_to supplier.name, supplier_path(supplier), :style => "text-decoration: none" do %> <br>
        <li class="card card-suppliers">
      </li>
    </ul>
      <% end  %>
    <% end  %>
  </div>
<br>
  <div>
    <%= link_to new_supplier_path(@supplier) do %>
    <i class="fa-solid fa-circle-plus fa-2xl"></i>
    <% end %>
  </div>

</div>
